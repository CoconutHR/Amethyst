{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2021"
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "strict": true,
    "pretty": true,
    "paths": {
      "@/*": [
        "./src/renderer/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      // more path aliases here
    },
    "sourceMap": true,
    "baseUrl": "./",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist"
  },
  "exclude": [
    "test",
    "release"
  ]
}