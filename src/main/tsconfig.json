{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../../src",
    "paths": {
      "@/*": ["renderer/*"],
      "@shared/*": ["shared/*"]
    },
    "outDir": "../../release/dist",
    "rootDir": "../../src",
    "module": "Node16",
    "target": "ES2021",
  },
  "include": [
    "../main/**/*.ts",
    "../shared/**/*.ts",
    "../renderer/types/**/*.d.ts"
  ]
}
